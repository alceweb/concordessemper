@model IEnumerable<ConcordesSemper.Models.Quesiti>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center"><img class="img-tornei-menu"  src="~/Content/Immagini/GonfaloneP.png" />Torneo delle case<img class="img-tornei-menu" src="~/Content/Immagini/GonfaloneP.png" /></h2><hr class="hr1" />
<h4 class="alert alert-warning">Puoi aggiungere punti alla tua casa partecipando alle gare del torneo. Scegli la gara e rispondi giusto alle domande per acquisire punti</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Gara N.
            </th>
            <th>
                Data pubblicazione
            </th>
            <th>
                Insegnante
            </th>
            <th>
                Punti
            </th>
        </tr>

    </thead>

    @foreach (var item in Model)
    {
            <tr data-href="@Url.Action("Risposta","Quesitis", new {id = item.Quesito_Id})">
                    <td></td>
                    <td>
                        <h5>@item.Quesito_Id</h5>
                    </td>
                    <td>
                        <h5>@item.DataI.ToString("dddd dd-MMM-yyyy")<br/><span>Ora @item.DataI.ToString("HH:MM")</span></h5>
                    </td>
                    <td>
                        <h5>@item.Prof</h5>
                    </td>
                    <td>

                        <h5><span class="txt-ombra h3">@Html.DisplayFor(modelItem => item.Valore)</span></h5>
                    </td>
</tr>

    }

</table>
@section Scripts{
    <script>
        $('tr[data-href]').on("click", function() {
        document.location = $(this).data('href');
        });
    </script>

    }