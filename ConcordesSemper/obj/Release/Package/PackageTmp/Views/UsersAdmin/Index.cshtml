@model IEnumerable<ConcordesSemper.Models.ApplicationUser>

@{
    ViewBag.Title = "Gestione utenti";
}

<h2>@ViewBag.Title</h2>
<div class="row">
        <div class="btn btn-primary"><span class="badge">@ViewBag.UtentiCount</span> Registràti</div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.UserName, "Edit", new { id = item.Id })
                </td>
                <td>
                    <a href="@Url.Action("Prof", "Punteggis", new {username = item.UserName })"><span class="fa fa-trophy"></span></a>
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove text-danger", @title = "Cancella" })
                </td>
            </tr>
        }
    </tbody>

</table>
@section Scripts{
    @Scripts.Render("~/Scripts/jquery.filtertable.min.js")
    <script>
        $(document).ready(function () {
            $('table').filterTable();
        });
    </script>
    }
