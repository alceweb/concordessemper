@model IEnumerable<ConcordesSemper.Models.Quesiti>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Acquisisci punti per la tua casa</h2><hr class="hr1" />
<h4>Puoi aggiungere punti alla tua casa partecipando a delle gare rispondendo ai quesiti qui sotto che gli insegnanti mettono a disposizione</h4>
    </p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Gara N.
            </th>
            <th>
                Punti
            </th>
        </tr>

    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Risposta","Quesitis", new {id = item.Quesito_Id})">
                    <h2 class="fa fa-pencil-square-o fa-3x text-primary"></h2>

                </a>
            </td>
            <td>
                <h2>@item.Quesito_Id</h2>
            </td>
            <td>

                <h2><span class="txt-ombra">@Html.DisplayFor(modelItem => item.Valore)</span></h2>
            </td>
        </tr>
    }

</table>
